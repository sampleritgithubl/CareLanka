            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="patient@email.com"
            android:textColor="#CCFFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <ScrollView
